<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#FF1A1A2E"
                android:centerColor="#FF2A2A4E"
                android:endColor="#FF1A1A2E" />
        </shape>
    </item>
    
    <!-- Ethereal overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:startColor="#404080FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Subtle pattern -->
    <item>
        <bitmap
            android:src="@drawable/pattern_overlay"
            android:tileMode="repeat"
            android:alpha="0.1" />
    </item>
</layer-list> 