<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C104F"> <!-- Deep purple background -->

    <!-- Game Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path Of\nChoices"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tapAnywhereText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <!-- Tap Anywhere Text -->
    <TextView
        android:id="@+id/tapAnywhereText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Anywhere"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>