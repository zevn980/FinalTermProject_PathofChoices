<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#8080A0FF"
                android:endColor="#00000000"/>
        </shape>
    </item>
    <!-- Main frame -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#80FFFFFF"/>
            <solid android:color="#001A1A2E"/>
        </shape>
    </item>
    <!-- Inner highlight -->
    <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#40FFFFFF"/>
        </shape>
    </item>
</layer-list> 