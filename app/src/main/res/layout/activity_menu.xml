<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_menu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_screen">

    <!-- Game Title -->

    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_decorative"
        android:gravity="center"
        android:text="Path Of Choices"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Menu Buttons -->
    <LinearLayout
        android:id="@+id/menuButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/menuTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/userButton"
            style="@style/MainMenuButton"
            android:text="Manage Users"
            android:textColor="#1e315b"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnNewStory"
            style="@style/MainMenuButton"
            android:text="Start New Story"
            android:textColor="#1e315b"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnContinue"
            style="@style/MainMenuButton"
            android:text="Continue"
            android:textColor="#1e315b"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnExit"
            style="@style/MainMenuButton"
            android:text="Exit"
            android:textColor="#1e315b"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>