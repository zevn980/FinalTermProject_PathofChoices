<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C104F"
    android:padding="16dp">

    <!-- Optional Character Image -->
    <ImageView
        android:id="@+id/imageCharacter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Dialog Box -->
    <TextView
        android:id="@+id/textDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Put dialog here..."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_dialog_box"
        android:padding="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageCharacter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Dynamic Choices Container -->
    <LinearLayout
        android:id="@+id/choiceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>