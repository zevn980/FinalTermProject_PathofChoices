<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C104F"
    android:padding="16dp">

    <!-- Optional Character Image -->
    <ImageView
        android:id="@+id/imageCharacter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Dialog Box -->
    <TextView
        android:id="@+id/textDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Put dialog here..."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_dialog_box"
        android:padding="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageCharacter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Choice 1 -->
    <Button
        android:id="@+id/btnChoice1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 1..."
        android:visibility="gone"
        android:backgroundTint="#4C4BA0"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Choice 2 -->
    <Button
        android:id="@+id/btnChoice2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 2..."
        android:visibility="gone"
        android:backgroundTint="#4C4BA0"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnChoice1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Choice 3 -->
    <Button
        android:id="@+id/btnChoice3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 3..."
        android:visibility="gone"
        android:backgroundTint="#4C4BA0"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnChoice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>